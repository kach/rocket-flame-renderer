# SKY and GROUND

LightSource "infinite" "string mapname" "sky.exr"

AttributeBegin
  Rotate 90 1 0 0
  Material "matte" "rgb Kd" [ .93 .79 .68 ]

  Shape "trianglemesh"
      "point P" [ -10000 0 -10000  10000 0 -10000  10000 0 10000  -10000 0 10000 ]
      "integer indices" [ 0 1 2 0 2 3 ]
AttributeEnd

WorldEnd
